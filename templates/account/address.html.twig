{% extends 'base.html.twig' %}

{% block title %}AccountAddressController!{% endblock %}

{% block body %}


<div class="container mb-5">

    <div class="d-flex justify-content-between">
        <div><h1>Mes adresses</h1></div>
        <div><a href="{{ path('app_account_address_add')}}" class="btn btn-primary btn-sm">Ajoutez une adresse</a></div>
    </div>
    

    C'est ici que vous pouvez gÃ©rer vos addresses.<br><br>


    {% if (app.user.addresses|length == 0) %}
        vous n'avez pas encore ajouter d'adresse dans votre compte client
    {% else    %}
        <div class="row">
            {% for address in app.user.addresses %}
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ address.name}}</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><span  class="fw-lighter">addresse : </span>{{ address.address}} {{ address.postal}} {{ address.city}}, {{ address.country}}</p>
                            <p class="card-text"><span  class="fw-lighter">contact : </span>{{ address.firstname}} {{ address.lastname}} {{ address.company }} {{ address.phone}}</p>
                            <a href="{{ path('app_account_address_update', {'id' : address.id } )}}" class="btn btn-success btn-sm">Modifier</a> | 
                            <a href="{{ path('app_account_address_remove', {'id' : address.id } )}}" class="btn btn-danger btn-sm">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif    %}

    <br><br>

    <a href="{{ path('app_account')}}" class="btn btn-info">Retour</a>
    

</div>
{% endblock %}
